<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

    <%# messages() %>
    <% if (errors) { %>
        <ul>
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>


    <div class="form-container">
    <div class="form">
    <form id="loginForm" action="/account/login" method="post">
        <div>
            <label for="login_email">Email: </label>
            <input id="login_email" name="account_email" type="email" placeholder="youremail@exemple.com" 
            required value="<%= locals.account_email %>"
            > 
        </div>
        <div>
            <label for="login_password">Password: </label>
            <input id="login_password" name="account_password" type="password" placeholder="Password" 
            required> 
        </div>

        <button type="submit" class="form-button">Login</button>

        <div>
            <p class="login-link">No account? 
           <a href="/account/register">Register here</a></p>
            
        </div>
    </form>
    </div>
    </div>
