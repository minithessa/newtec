<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
} %>

<%- messages()  %>

<% if (errors) { %>
    <ul>
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<div class="form-container">
<div class="form">
    <form action="/account/register" method="post">
        <div>
            <label for="firstname">First Name: </label>
            <input id="firstname" name="account_firstname" type="text" placeholder="First Name" 
                required value="<%= locals.account_firstname %>"> 
        </div>

        <div>
            <label for="lastname">Last Name: </label>
            <input id="lastname" name="account_lastname" type="text" placeholder="Last Name" 
                required value="<%= locals.account_lastname %>"> 
        </div>

        <div>
            <label for="email">Email: </label>
            <input id="email" name="account_email" type="email" placeholder="youremail@example.com" 
                required value="<%= locals.account_email %>"> 
        </div>

        <div>
            <label for="password">Password: </label>  
            <input id="password" name="account_password" type="password" placeholder="Password" required
            pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"> 
            <p>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</p>
        </div>

        <button type="submit" class="form-button">Register</button>
       </form>
      </div>
      </div>
